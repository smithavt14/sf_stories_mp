.menu__container {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 250rpx;
  background: #232323;
  color: #FFFCFC;
  font-size: 32rpx;
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
}

.menu__container  .container {
  height: 150rpx;
  width: 90%;
  border-bottom: 1px solid rgba(260,260,260,0.5);
  display: flex;
  align-items: center;
}

.btn {
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  top: 5%;
  left: 5%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-weight: 600;
  z-index: 200;
}

.slider_container {
  flex-grow: 1;
}