  width: 90%;
  font-size: 40rpx;
  font-weight: 800;
  font-family: Georgia, 'Times New Roman', Times, serif;
  margin-bottom: 10rpx;
}

.container .author {
  width: 90%;
  font-size: 32rpx;
}