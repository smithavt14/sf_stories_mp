.user_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-bottom: 32rpx;
}

.user_container .avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  margin: 20rpx 0;
}

.container {
  height: 150rpx;
  width: 90%;
  border-bottom: 1px solid rgba(260,260,260,0.5);
  display: flex;
  align-items: center;
  justify-content: space-between;
  -webkit-transform: translateY(1000px); 
}

.container > .icon {
  height: 48rpx;
  width: 48rpx;
}

.continue {
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 80rpx 0;
}

.top_container {
  width: 100vw;
  height: 200rpx;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.menu-btn {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-weight: 600;
  position: fixed;
  top: 5%;
  left: 5%;
}
