<view class="page__container" style="background: {{display.backgroundColor}}; color: {{display.color}}">
  
  <!-- User Information -->
  <view class="user_container">
    <image 
    class="avatar" 
    src="{{user.avatar}}" 
    mode="aspectFill"></image>
    
    <view class="name">{{user.nickname}}</view>
  </view>

  <!-- Information Containers -->
  <block wx:if="{{user}}">
    <view
    class="container" 
    style="border-bottom-color: {{display.color}}">Favorites</view>
    
    <view 
    class="container" 
    style="border-bottom-color: {{display.color}}">Total Reading Time</view>
    
    <view 
    class="container" 
    style="border-bottom-color: {{display.color}}">Stories Fetched</view>

    <view 
    class="container" 
    style="border-bottom-color: {{display.color}}"
    bindtap="navigateToHome">Continue Reading</view>

    <view 
    wx:if="{{user}}"
    class="container" 
    style="border-bottom-color: {{display.color}}"
    bindtap="logout">Logout</view>
  </block>
  
  <!-- Auth Buttons -->
  <button 
  wx:if="{{!user}}" 
  type="primary" 
  class="auth-btn" 
  open-type="getUserInfo"
  bindgetuserinfo="userInfoHandler">Login</button>

</view>