.story_container {
  width: 90vw;
  margin-bottom: 175rpx;
  margin-top: 45rpx;
}

.top_container {
  width: 100vw;
  height: 200rpx;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.top_container .menu-btn {
  width: 64rpx;
  height: 64rpx;
  position: fixed;
  top: 6%;
  left: 5%;
}

.top_container .speed-info {
  position: fixed;
  top: 5%;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.story_container .content {
  font-size: 32rpx;
  margin: 20rpx 0;
  font-family: serif;
  text-align: justify;
}

.title__area {
  width: 100vw;
  position: fixed;
  bottom: 0;
  padding: 72rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.title__area > .btn__container {
  width: 90%;
  display: flex;
  justify-content: space-around;
  padding-bottom: 40rpx;
}

.title__area > .btn__container > .btn {
  width: 64rpx;
  height: 64rpx;
}

.title__area .title {
  width: 90%;
  font-size: 40rpx;
  font-weight: 800;
  font-family: Georgia, 'Times New Roman', Times, serif;
  text-align: center;
  margin-bottom: 10rpx;
  line-height: 1.5; 
}

.title__area .author {
  /* width: 90%; */
  font-size: 32rpx;
  text-align: center;
}

.font__container {
  height: 150rpx;
  width: 90%;
  /* display: flex; */
  align-items: center;
  justify-content: space-between;
}

