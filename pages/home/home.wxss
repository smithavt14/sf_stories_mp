.story_container {
  width: 90vw;
  margin-bottom: 175rpx;
  margin-top: 45rpx;
}

.top_container {
  width: 100vw;
  height: 200rpx;
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 200;
}

.top_container .menu-btn {
  height: 100rpx;
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-weight: 600;
  position: fixed;
  top: 5%;
  left: 5%;
}

.top_container .speed-info {
  position: fixed;
  top: 5%;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.story_container .content {
  font-size: 32rpx;
  margin: 20rpx 0;
  font-family: serif;
  text-align: justify;
}

.title__area {
  width: 100vw;
  height: 200rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.title__area .title {
  width: 90%;
  font-size: 40rpx;
  font-weight: 800;
  font-family: Georgia, 'Times New Roman', Times, serif;
  text-align: center;
  margin-bottom: 10rpx;
}

.title__area .author {
  width: 90%;
  font-size: 32rpx;
  text-align: center;
}